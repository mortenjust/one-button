<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:paddingLeft="0dp">


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_height="80dp"
        android:progress="50"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/greenprogress" />

    <!-- Trying out a replacement for the noisy thumbnails, and
     also trying to make it look more like a tv guide for
     demo reasons -->

    <RelativeLayout
        android:layout_width="80dp"
        android:background="#000000"
        android:padding="8dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:id="@+id/channelNumber"
            android:textColor="#616161"
            tools:text="555" />

        <ImageView
            android:id="@+id/channelLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:scaleType="fitCenter"
            android:alpha=".5" />
    </RelativeLayout>


    <!-- Thumbnail Image to not have any top bottom left margins -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="0dp"
        android:background="#212121"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:padding="0dip" />


    <!-- Container for data about the show -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="88dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp">


        <!-- Movie Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title"
            android:textColor="@color/text"
            android:fontFamily="sans-serif-thin"
            tools:text="Titanic on 63"
            android:gravity="left" />

        <!-- Rating -->
        <TextView
            android:id="@+id/rating"
            tools:text="Drama, 7.6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:textColor="@color/secondaryText"
            android:layout_marginTop="1dip"
            android:textSize="@dimen/rating" />


    </RelativeLayout>

</RelativeLayout>