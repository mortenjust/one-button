<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity$PlaceholderFragment">

    <ListView
        android:id="@+id/listview_tvshows"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:choiceMode="none"
        android:divider="@color/list_divider"
        tools:listitem="@android:layout/simple_list_item_2"></ListView>
    <!-- copied this from https://github.com/makovkastar/FloatingActionButton -->
    <!-- TODO proper layout and drawable -->
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/button_floating_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        fab:fab_colorNormal="#424242"
        android:layout_margin="16dp"
        android:alpha="0.25"
        android:src="@drawable/ic_settings_white"
        fab:fab_shadow="false"
        />

</FrameLayout>
